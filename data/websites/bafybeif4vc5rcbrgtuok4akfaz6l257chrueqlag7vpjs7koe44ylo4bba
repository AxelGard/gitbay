<script type="text/javascript">
	var interval = 500;
	var intervaltime = 5000;
	var animatetime = 1000;

	$("#slider > div:not(.main_on)").css("opacity",0);

	interval = setInterval(function() {
		var currentimg = $("#slider > div.main_on");
		currentimg.removeClass("main_on");

		var nextimg = $(currentimg.next().size() > 0 ? currentimg.next() : "#slider > div:eq(0)");
		nextimg.addClass("main_on").animate({opacity:1},animatetime ,function() {
			//currentimg.css("opacity",0);
			currentimg.animate({opacity:0},animatetime ,function() {});
		});
	},intervaltime );
</script>

